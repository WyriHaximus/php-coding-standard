{
    "name": "wyrihaximus/coding-standard",
    "type": "phpcodesniffer-standard",
    "description": "WyriHaximus Coding Standard",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2 || ^1.0.0",
        "doctrine/coding-standard": "^9.0.2 || ^12.0.0",
        "slevomat/coding-standard": "^7.2.1",
        "squizlabs/php_codesniffer": "^3.7.2"
    },
    "config": {
        "platform": {
            "php": "8.1.13"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
